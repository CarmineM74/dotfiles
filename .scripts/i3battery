#!/bin/bash
#acpi | cut -d " " -f3-5 |  sed -e "s/,//g;s/Discharging/ðŸ”‹/;s/Charging/ðŸ”Œ/;s/Full/âš¡/;s/ 0*/ /g;s/ :/ /g"

batinf='acpi -b'
perc=$(acpi -b | awk '{print $4;}' | sed 's/%//g' | sed 's/,//g')
charging=$(acpi -b | grep -c Discharging)
if [ ! $charging -eq 1 ]
then echo "ï‡¦ $perc%"
elif (( $perc > '75' ))
then echo "ï‰€ $perc%"
elif (( $perc > '50' ))
then echo "ï‰ $perc%"
elif (( $perc > '25' ))
then echo "ï‰‚ $perc%"
elif  (( $perc > '10' ))
then echo "ï‰ƒ $perc%"
else
echo "ï‰„ $perc%"
fi


